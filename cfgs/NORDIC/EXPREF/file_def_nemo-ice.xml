    <!-- $id$ -->

 <!--
============================================================================================================
=                                           output files definition                                        =
=                                      Define your own files for sea ice                                   =
=                                         put the variables you want...                                    =
============================================================================================================
 -->

 <file_definition type="one_file" name="@expname@_@freq@" sync_freq="1d" split_freq="1mo" min_digits="4">
   <file_group id="1ts" output_freq="1ts" output_level="10" enabled=".TRUE."/> <!-- 1 time step files -->
   <file_group id="1h"  output_freq="1h"  output_level="10" enabled=".TRUE." > <!-- 1h files -->

     <file id="file23" name_suffix="_ice_grid_T" description="ice variables" compression_level="0" enabled=".true." >
       <field field_ref="icethic"          name="icethic"  operation="average" grid_ref="grid_baltic_zoom_T_2D" />
       <field field_ref="iceconc"          name="icefrac"  operation="average" grid_ref="grid_baltic_zoom_T_2D" />
       <field field_ref="uice"             name="uice"     operation="average" grid_ref="grid_baltic_zoom_T_2D" />
       <field field_ref="vice"             name="vice"     operation="average" grid_ref="grid_baltic_zoom_T_2D" />
       <field field_ref="snwthic"          name="snwthic"  operation="average" grid_ref="grid_baltic_zoom_T_2D" />
       <!-- category fields -->
       <field field_ref="iceconc_cat"      name="iceconc_cat"  operation="average" grid_ref="grid_baltic_zoom_T_3D_ncatice" />
       <field field_ref="icethic_cat"      name="icethic_cat"  operation="average" grid_ref="grid_baltic_zoom_T_3D_ncatice" />
       <field field_ref="snwthic_cat"      name="snwthic_cat"  operation="average" grid_ref="grid_baltic_zoom_T_3D_ncatice" />
     </file>

     <file id="file24" name_suffix="_ice_scalar" description="ice scalar variables" compression_level="0" enabled=".true." >
       <!-- global contents -->
       <field field_ref="ibgvol_tot"      grid_ref="grid_1point"   name="ibgvol_tot"   />
       <field field_ref="sbgvol_tot"      grid_ref="grid_1point"   name="sbgvol_tot"   />
       <field field_ref="ibgarea_tot"     grid_ref="grid_1point"   name="ibgarea_tot"  />
     </file>

   </file_group>
   <file_group id="2h"  output_freq="2h"  output_level="10" enabled=".TRUE."/> <!-- 2h files -->
   <file_group id="3h"  output_freq="3h"  output_level="10" enabled=".TRUE."/> <!-- 3h files -->
   <file_group id="4h"  output_freq="4h"  output_level="10" enabled=".TRUE."/> <!-- 4h files -->
   <file_group id="6h"  output_freq="6h"  output_level="10" enabled=".TRUE." > <!-- 6h files -->
   </file_group>
   <file_group id="1d"  output_freq="1d"  output_level="10" enabled=".TRUE." >  <!-- 1d files -->
   </file_group>
   <file_group id="5d"  output_freq="5d"  output_level="10" enabled=".TRUE."/>  <!-- 5d files -->
   <file_group id="1m"  output_freq="1mo" output_level="10" enabled=".TRUE."/> <!-- real monthly files -->
   <file_group id="2m"  output_freq="2mo" output_level="10" enabled=".TRUE."/> <!-- real 2m files -->
   <file_group id="3m"  output_freq="3mo" output_level="10" enabled=".TRUE."/> <!-- real 3m files -->
   <file_group id="4m"  output_freq="4mo" output_level="10" enabled=".TRUE."/> <!-- real 4m files -->
   <file_group id="6m"  output_freq="6mo" output_level="10" enabled=".TRUE."/> <!-- real 6m files -->
   <file_group id="1y"  output_freq="1y"  output_level="10" enabled=".TRUE."/> <!-- real yearly files -->
   <file_group id="2y"  output_freq="2y"  output_level="10" enabled=".TRUE."/> <!-- real 2y files -->
   <file_group id="5y"  output_freq="5y"  output_level="10" enabled=".TRUE."/> <!-- real 5y files -->
   <file_group id="10y" output_freq="10y" output_level="10" enabled=".TRUE."/> <!-- real 10y files -->

 </file_definition>


